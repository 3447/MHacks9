{
  "manifest_version": 2,
  "name": "MHacks9 Lookup",
  "description" : "This extension looks up relevant information for a highlighted search term.",
  "version": "1.0",
  "permissions": ["contextMenus", "activeTab"],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "sidebar.min.js", "jquery.min.js"],
      "css": ["sidebar.min.css"]
    }
  ]
}
